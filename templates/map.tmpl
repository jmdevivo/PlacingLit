    var hideOverlay = function(){
      var overlay = document.getElementById("mapOverlay");
      overlay.style.display = 'none';
      $('#featContentText').text("View Featured Content");
    }

    $('#featContent').click(function(){
      if($('#mapOverlay').css('display') == 'none'){
        $('.info-overlay').hide();
        $('#mapOverlay').show();
