        tabs.push($(this));
      });
      $('.nextSceneFieldBtn').click(function(){
        var len = tabs.length;
        for(var i=0; i<len;i++){
          if(tabs[i].hasClass('activeNav')){
            tabs[i+1].click();
            break;
